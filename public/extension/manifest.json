{
  "manifest_version": 3,
  "name": "JKT48 Points History Exporter",
  "version": "1.0",
  "description": "Export JKT48 Points History to CSV",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": [
    "https://jkt48.com/*",
    "http://localhost:*/*",
    "https://*.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://jkt48.com/mypage/point-history*",
        "http://localhost:*/*",
        "https://*.vercel.app/*"
      ],
      "js": ["content.js"]
    }
  ]
} 